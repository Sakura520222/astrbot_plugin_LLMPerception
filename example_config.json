{
    "timezone": "Asia/Shanghai",
    "enable_holiday_perception": true,
    "enable_platform_perception": true,
    "holiday_country": ["CN", "US", "JP"],
    "// holiday_country 支持的国家代码列表": [
        "CN - 中国 (使用chinese-calendar库)",
        "US - 美国",
        "GB - 英国",
        "JP - 日本",
        "KR - 韩国",
        "DE - 德国",
        "FR - 法国",
        "CA - 加拿大",
        "AU - 澳大利亚",
        "IN - 印度",
        "BR - 巴西",
        "RU - 俄罗斯",
        "MX - 墨西哥",
        "IT - 意大利",
        "ES - 西班牙",
        "// 支持同时识别多个国家的节假日，默认配置为 [\"CN\", \"US\", \"JP\"]",
        "// 更多国家代码请参考: https://github.com/dr-prodigy/python-holidays#available-countries"
    ],
    "enable_custom_perception": true,
    "custom_perception_rules": [
        {
            "name": "工作时间提醒",
            "condition": "current_time.hour >= 9 and current_time.hour <= 18",
            "content": "工作时间段",
            "enabled": true
        },
        {
            "name": "深夜模式",
            "condition": "current_time.hour >= 22 or current_time.hour < 6",
            "content": "深夜模式，请早点休息",
            "enabled": true
        },
        {
            "name": "QQ平台特殊处理",
            "condition": "platform_name == 'aiocqhttp'",
            "content": "QQ平台消息",
            "enabled": true
        },
        {
            "name": "Telegram平台特殊处理",
            "condition": "platform_name == 'telegram'",
            "content": "Telegram平台消息",
            "enabled": true
        },
        {
            "name": "周末问候",
            "condition": "current_time.weekday() >= 5",
            "content": "周末愉快！",
            "enabled": true
        },
        {
            "name": "上午问候",
            "condition": "current_time.hour >= 5 and current_time.hour < 12",
            "content": "早上好！现在是{current_time.strftime(\"%H:%M\")}",
            "enabled": true
        },
        {
            "name": "下午问候",
            "condition": "current_time.hour >= 12 and current_time.hour < 18",
            "content": "下午好！现在是{current_time.strftime(\"%H:%M\")}",
            "enabled": true
        },
        {
            "name": "晚上问候",
            "condition": "current_time.hour >= 18 and current_time.hour < 22",
            "content": "晚上好！现在是{current_time.strftime(\"%H:%M\")}",
            "enabled": true
        }
    ]
}